<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ucsc_blue</item>
        <item name="colorPrimaryDark">@color/ucsc_blue_dark</item>
    </style>

    <style name="SearchBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/ucsc_yellow</item>
        <item name="colorControlNormal">@color/ucsc_yellow</item>
    </style>

    <style name="TabTheme" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
